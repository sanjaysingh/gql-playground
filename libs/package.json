{
  "name": "graphql-playground",
  "version": "1.0.0",
  "description": "Browser-based GraphQL playground",
  "main": "main.js",
  "scripts": {
    "build": "npm run build:graphql && npm run build:app",
    "build:graphql": "browserify gql-lib.js -o runtime/gql-lib-bundle-16.11.0.js",
    "build:app": "browserify app-gql.js -o runtime/app-gql-bundle.js"
  },
  "dependencies": {
    "graphql": "16.11.0"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "watchify": "^4.0.0"
  }
}
